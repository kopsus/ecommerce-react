generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  CUSTOMER
  SELLER
}

enum VendorVerifStatus {
  NONE      
  PENDING  
  APPROVED  
  REJECTED  
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  password     String
  name         String
  role         Role     @default(CUSTOMER)
  vendorStatus VendorVerifStatus @default(NONE)
  createdAt    DateTime @default(now())

  products    Product[]
  cartItems   CartItem[]
  orders      Order[]
  reviews     Review[]
  vouchers    Voucher[]
  wishlist    Wishlist[]
}
model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?  
  price       Float    
  stock       Int
  image       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  sellerId    Int
  seller      User     @relation(fields: [sellerId], references: [id])

  cartItems   CartItem[]
  orderItems  OrderItem[]
  reviews     Review[]
  wishlistItems Wishlist[]
}

model CartItem {
  id        Int      @id @default(autoincrement())
  quantity  Int      @default(1)
  
  // Milik User Siapa?
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  
  // Produk Apa?
  productId Int
  product   Product  @relation(fields: [productId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Mencegah duplikasi: Satu user tidak boleh punya baris double untuk produk yang sama.
  // Kalau beli produk yg sama lagi, kita update quantity-nya, bukan buat baris baru.
  @@unique([userId, productId]) 
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  COMPLETED
  CANCELLED
}

// Model Order (Nota Pesanan)
model Order {
  id          Int         @id @default(autoincrement())
  userId      Int
  user        User        @relation(fields: [userId], references: [id])
  totalAmount Float
  status      OrderStatus @default(PENDING)
  createdAt   DateTime    @default(now())

  voucherId   Int?
  voucher     Voucher? @relation(fields: [voucherId], references: [id])
  
  // Kita perlu simpan juga nilai diskonnya saat itu (snapshot)
  discountAmount Float @default(0)
  
  items       OrderItem[]
}

// Model OrderItem (Barang dalam Nota)
model OrderItem {
  id        Int     @id @default(autoincrement())
  orderId   Int
  order     Order   @relation(fields: [orderId], references: [id])
  productId Int
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Float   // Kita simpan harga SAAT BELI (penting jika harga produk berubah nanti)
}

model Review {
  id        Int      @id @default(autoincrement())
  rating    Int      // Skala 1 - 5
  comment   String?  // Boleh kosong kalau cuma mau kasih bintang
  
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  
  productId Int
  product   Product  @relation(fields: [productId], references: [id])

  createdAt DateTime @default(now())

  // Opsional: Satu user cuma boleh review 1x per produk
  @@unique([userId, productId])
}

enum DiscountType {
  PERCENT   // Potongan persen (misal 10%)
  FIXED     // Potongan harga tetap (misal Rp 10.000)
}

model Voucher {
  id          Int          @id @default(autoincrement())
  code        String       @unique // Kode unik, misal "MERDEKA45"
  type        DiscountType
  amount      Float        // Nilai potongan (bisa 10 (persen) atau 10000 (rupiah))
  minPurchase Float?       // Minimal belanja biar bisa pakai (opsional)
  expiresAt   DateTime     // Tanggal kadaluarsa
  
  sellerId    Int
  seller      User         @relation(fields: [sellerId], references: [id])

  createdAt   DateTime     @default(now())
  
  // Relasi ke Order (Satu voucher bisa dipakai di banyak order)
  orders      Order[]
}

model Wishlist {
  id        Int      @id @default(autoincrement())
  
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  
  productId Int
  product   Product  @relation(fields: [productId], references: [id])

  createdAt DateTime @default(now())

  // Mencegah duplikasi: Satu user cuma bisa wishlist produk yg sama 1x
  @@unique([userId, productId])
}